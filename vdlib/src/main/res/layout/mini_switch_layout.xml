<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:animateLayoutChanges="true"
	android:orientation="vertical"
	android:padding="8dp">

	<View
		android:id="@+id/mini_seperator"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"/>

	<Switch
		android:id="@+id/mini_switch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="8dp"
		android:layout_marginTop="16dp"/>

	<TextView
		android:id="@+id/mini_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/mini_switch"
		android:text="asdaıubsdıuas"
		android:textColor="#111"
		android:textSize="18sp"
		/>

	<TextView
		android:id="@+id/mini_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@id/mini_title"
		android:layout_marginTop="6dp"
		android:layout_toLeftOf="@id/mini_switch"
		android:text="bkasnd"
		android:textColor="#666"
		android:textSize="12sp"/>
</RelativeLayout>