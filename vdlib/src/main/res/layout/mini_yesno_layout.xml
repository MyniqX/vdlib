<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="8dp">

	<View
		android:id="@+id/mini_seperator"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/black"/>

	<TextView
		android:id="@+id/mini_yesno_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="emin misin?"
		android:textColor="@color/black"

		android:textSize="15sp"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="horizontal">

		<ImageButton
			android:id="@+id/mini_button_no"
			android:layout_width="@dimen/mini_yesno_button_size"
			android:layout_height="@dimen/mini_yesno_button_size"
			android:layout_margin="4dp"
			android:background="@drawable/shape_circle"
			app:srcCompat="@drawable/cancel_icon"/>

		<ImageButton
			android:id="@+id/mini_button_yes"
			android:layout_width="@dimen/mini_yesno_button_size"
			android:layout_height="@dimen/mini_yesno_button_size"
			android:layout_margin="4dp"
			android:background="@drawable/shape_circle"
			app:srcCompat="@drawable/check_icon"/>
	</LinearLayout>
</LinearLayout>